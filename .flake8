[flake8]
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    htmlcov,
    dist,
    build,
    .eggs,
    *.egg-info
max-line-length = 88
extend-ignore = E203

# E203: whitespace before ':'
# W503: line break before binary operator
# E501: line too long (handled by black)
# max-complexity = 10
# per-file-ignores =
#     # __init__.py files can have unused imports
#     __init__.py:F401
#     # Test files can have unused variables (mocks, fixtures)
#     tests/*:F841
#     # Some complex functions are acceptable in main modules
#     */main.py:C901
#     # Server and config files may be complex
#     *server.py:C901
#     *config.py:C901 